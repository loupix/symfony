{% extends 'ShoefonyCmsBundle::Layout.html.twig' %}
{% block contentBody %}
                <!-- Page Content -->
        <div class="container">

            <!-- Carousel -->
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    {% for slide in slides %}

                    <div class="item {% if loop.index==1 %}active{% endif %}">
                        <img src='{{ asset(slide.image.url) }}' alt="{{slide.image.alt}}">
                    </div>
                    {% endfor %}
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Précédent</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Suivant</span>
                </a>
            </div>
            <!-- /.carousel -->

            <hr>

            <!-- Title -->
            <div class="row">
                <div class="col-lg-12">
                    <h3>Les nouveautés</h3>
                </div>
            </div>
            <!-- /.row -->

            <!-- Page Features -->
            <div class="row text-center">

                {% for product in lastProducts %}
                <div class="col-md-3 col-sm-6 hero-feature">
                    <div class="thumbnail">
                        <img src='{{ asset(product.image.url) }}' alt="Nom du produit">
                        <div class="caption">
                            <h3>{{product.title}}</h3>
                            <p>{{ product.description | raw }}</p>
                            <p>
                                <span class="badge">{{ product.price }} €</span> <a href="{{ path('shoefony_store_produit', {id:product.id, slug:product.slug}) }}" class="btn btn-default">Voir la fiche</a>
                            </p>
                        </div>
                    </div>
                </div>
                {% endfor %}


            </div>
            <!-- /.row -->

            <hr>

            <!-- Title -->
            <div class="row">
                <div class="col-lg-12">
                    <h3>Les plus populaires</h3>
                </div>
            </div>
            <!-- /.row -->

            <!-- Page Features -->
            <div class="row text-center">

                {% for product in popularProducts %}
                <div class="col-md-3 col-sm-6 hero-feature">
                    <div class="thumbnail">
                        <img src='{{ asset(product.image.url) }}' alt="Nom du produit">
                        <div class="caption">
                            <h3>{{product.title}}</h3>
                            <p>{{ product.description | raw }}</p>
                            <p>
                                <span class="badge">{{ product.price }} €</span> <a href="{{ path('shoefony_store_produit', {id:product.id, slug:'voila'}) }}" class="btn btn-default">Voir la fiche</a>
                            </p>
                        </div>
                    </div>
                </div>
                {% endfor %}


            </div>
            <!-- /.row -->

            <hr>

            

        </div>

{% endblock %}