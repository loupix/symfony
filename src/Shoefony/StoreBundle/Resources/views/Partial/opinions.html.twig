						<div class="well">

                            <p class="pull-right label label-success">Actuellement {{ opinions|length }} avis</p>

                            {% for opinion in opinions %}
		                    <div class="row">
		                        <div class="col-md-12">
		                            <span class="label label-info">{{opinion.prenom}}&nbsp;{{opinion.nom}}</span>
		                            <span class="label label-default pull-right">{{ opinion.createdAt|date("d-m-Y") }}</span>
		                            <p>{{opinion.commentaire}}</p>
		                        </div>
		                    </div>

		                    <hr>
		                    {% endfor %}
		                    

                            <div>
                                <form method="POST" {{ form_enctype(formOpinion) }}>
                                    <div class="form-group">
                                        {{ form_errors(formOpinion.nom) }}
                                        {{ form_label(formOpinion.nom) }}
                                        {{ form_widget(formOpinion.nom, {'attr':{'class':'form-control', 'placeholder':formOpinion.nom.vars.label}}) }}
                                    </div>
                                    
                                    <div class="form-group">
                                        {{ form_errors(formOpinion.prenom) }}
                                        {{ form_label(formOpinion.prenom) }}
                                        {{ form_widget(formOpinion.prenom, {'attr':{'class':'form-control', 'placeholder':formOpinion.prenom.vars.label}}) }}
                                    </div>

                                    <div class="form-group">
                                        {{ form_errors(formOpinion.commentaire) }}
                                        {{ form_label(formOpinion.commentaire) }}
                                        {{ form_widget(formOpinion.commentaire, {'attr':{'class':'form-control', 'placeholder':formOpinion.commentaire.vars.label}}) }}
                                    </div>
                                    {{ form_rest(formOpinion) }}
                                    <button type="submit" class="btn btn-info">Envoyer mon avis</button>
                                </form>
                            </div>
		                </div>      