					<div class="row text-center">
	            		{% for product in products %}

		                <div class="col-md-{{ col }} col-sm-6 hero-feature">
		                    <div class="thumbnail">
		                        <img src="{{ asset(product.image.url)}}" alt="Nom du produit">
		                        <div class="caption">
		                            <h3>{{ product.title }}</h3>
		                            <p>{{ product.description | raw }}</p>
		                            <p>
		                                <span class="badge">{{ product.price }} €</span> <a href="{{ path ('shoefony_store_produit', {id:product.id, slug:product.slug}) }}" class="btn btn-default">Voir la fiche</a>
		                            </p>
		                        </div>
		                    </div>
		                </div>

		                {% endfor %}


			            <div class="row text-center">

		                	<nav>
								<ul class="pagination pagination-lg">
									{% if pagination.page>1 %}
							    	<li>
							      		<a href="{{ path('shoefony_store_products_pages', {'page':pagination.page-1}) }}" aria-label="Précédent">
							        		<span aria-hidden="true">&laquo;</span>
							      		</a>
							    	</li>
							    	{% endif %}
							    	{% for n in range(1, pagination.countPages) %}
							    	<li {% if n==pagination.page %}class="active"{% endif %}><a href="{{ path('shoefony_store_products_pages', {'page':n}) }}">{{ n }}</a></li>
							    	{% endfor %}

							    	{% if pagination.page<pagination.total_products %}
							    	<li>
							      		<a href="{{ path('shoefony_store_products_pages', {'page':pagination.page+1}) }}" aria-label="Suivant">
							        		<span aria-hidden="true">&raquo;</span>
							      		</a>
							    	</li>
							    	{% endif %}
							  	</ul>
							</nav>

		                </div>


	                </div>